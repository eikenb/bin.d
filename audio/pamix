#!/bin/sh

## script to change volume of pulse-audio via command line
## for now only works on default

# If default sink is set in config, make sure it is set. I use a usb-dac so
# it changes or gets turned off occasionally.
client_conf="${HOME}/.config/pulse/client.conf"
if [ -e $client_conf ]; then
    sink_name=$(grep default-sink $client_conf | cut -d= -f2)
    if pacmd list-sinks | grep -q $sink_name ; then
        pacmd set-default-sink $sink_name 2> /dev/null
    fi
fi

default_sink=$(pacmd list-sinks | awk '/* index:/ {print $3}')

volume=$(pacmd dump-volumes \
    | awk -F= "/Sink $default_sink/ { print \$3 }" \
    | awk '{ print $1$4,$8$11}')

usage() {
    [ -n "$1" ] && echo "$1"
    echo "Usage: $(basename $0) [command] [percent-change]"
    echo "Commands:"
    echo "\t+/up       volume up"
    echo "\t-/down     volume down"
    echo "Examples:"
    echo "\t\"$(basename $0) up 10\" - increase volume by 10%"
    echo "\t\"$(basename $0) -5\" - decrease volume by 5%"
    exit 1
}

change=$(echo "$1" | grep -o "[0-9]\+")
[ -n "$2" ] && change="$2"
if [ -z "$change" ]; then
    change=$(( 5 * $(echo $1 | grep -o -- "[+-]" | wc -w) ))
fi

volume=$(pacmd dump-volumes \
    | awk -F= "/Sink $default_sink/ { print \$3 }" \
    | awk '{ print $4 }')

ceil () { vol="${1%*%}"; chg="$2"
    newvol=$(( $vol + $chg ))
    mod=$(( $newvol - 100 ))
    [ $newvol -gt 100 ] && echo $(( $chg - $mod )) || echo $chg
}

floor () { vol="${1%*%}"; chg="$2"
    newvol=$(( $volume - $chg ))
    [ $newvol -lt 0 ] && echo $(( $chg + $newvol )) || echo $chg
}

# strip off number if it was right against modifier (eg. +10)
cmd=$(echo "$1" | sed 's/[0-9]\+//g')

case $cmd in
    [+]*|u*)
        change=$(ceil $volume $change)
        pactl -- set-sink-volume ${default_sink} +${change}%
        ;;
    [-]*|d*)
        change=$(floor $volume $change)
        pactl -- set-sink-volume ${default_sink} -${change}%
        ;;
    -h|-?) usage ;;
esac

# final volume
if [ -t 0 ]; then
    pacmd dump-volumes \
        | awk -F= "/Sink $default_sink/ { print \$3 }" \
        | awk '{ print $4"/"$11}'
else
    pacmd dump-volumes \
        | awk -F= "/Sink $default_sink/ { print \$3 }" \
        | awk '{ print $4"/"$11}' \
        | notify-send-in -t 10 -u low
fi
